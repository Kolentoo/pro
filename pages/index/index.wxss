/**index.wxss**/
.index .bj0 {position: fixed;top: 0;left: 0;width: 100%;height:100%;z-index:1;}
.content {position: absolute;top: 0;left: 0;width: 100%;z-index: 5;}
.content .option {padding:15px 15px 0;}
.content .option-list {width: 40px;height: 40px;border-radius:50%;border:2px solid rgba(255,255,255,0.3);}
.content .option-list image {margin:10px auto 0;}
.content .menu-icon {width: 20px;height:20px;}
.content .option-icon {width: 20px;height:20px;}
.content .title-box {color:#fff;margin-top: 50%;}
.content .title {font-size: 40px;}
.content .author {font-size: 14px;color:#f1dec1;}
.content .tips {font-size: 12px;color:#fff;position: fixed;left: 0;bottom:20px;width: 100%;}


.container {overflow: hidden;height: 100%;width: 100%;}
.userinfo {display: flex;flex-direction: column;align-items: center;transition:all ease 0.8s;opacity: 0;transform: scale(0.7,0.7);margin-top: 120px;}
.info-off {opacity: 0;transform: scale(0,0);z-index:-1;}
.userinfo-avatar {width: 128rpx;height: 128rpx;margin: 20rpx;border-radius: 50%;}
.userinfo-nickname {color: #aaa;}
.usermotto {margin-top: 150px;transition: all ease 0.6s;opacity: 0;font-size: 16px;text-align: center;}
.user-off {opacity: 1;margin-top: 200px;}
.style-off {transform: scale(1,1);opacity: 1;}
.arrow {width: 20px;height:20px;margin:5px auto 0;}
.entry {display: flex;justify-content: enter;margin-top: -30px;}
.entry .entry-list {width: 100%;text-align: center;} 
.entry .entry-list text{font-size: 14px;}
.entry .entry-list image {width:50px;height:50px;border-radius:50%;margin:0 30px;animation: ipic 3s infinite;transform-origin:50% 80%;}
.entry-list {opacity: 0;transform:translateY(150px);}
.entry-on {animation: ishow 0.8s forwards;}
.ishow1 {animation-delay: 0.2s;}
.ishow2 {animation-delay: 0.4s;}
.ishow3 {animation-delay: 0.6s;}
.bj2 {vertical-align: middle;width: 50%;height:70px;margin: 60px auto 0;opacity: 0;transform:translateY(150px);animation: bj2 1.5s forwards;
animation-delay: 3.4s;position:fixed;bottom:5px;}
.bj3 {position:absolute;width:55px;height:165px;left:-55px;top:12%;}
.bj4 {position:absolute;left:50%;top:8%;margin-left:-130px;width:50px;height:50px;opacity: 0;}
.picon1 {animation: bj3 0.7s forwards;animation-delay: 0.8s;}
.picon2 {animation: bj4 0.9s forwards;animation-delay: 1.1s;}

.new-con {position: fixed;bottom:-100%;left:0;width:100%;height:100%;transition:all ease 0.8s;opacity: 0;z-index:-1;}
.mshow {bottom:0;opacity: 1;z-index:10;}
.new-con .bj1 {width:100%;height:100%;position: fixed;bottom:0;left:0;}
.new-con .content {z-index:20;position: relative;}
.new-con .content .arrow2 {height:20px;width: 20px;margin:0 auto;}
.new-con .title {color:#fff;font-size: 20px;padding-top:80px;}
.new-con .menu-group {display: flex;width:100%;justify-content: center;flex-wrap: wrap;margin-top:20px;}
.new-con .menu-list {width:150px;padding:3px;position:relative;text-align: center;flex-direction: row;}
.new-con image {width:150px;height:150px;}
.new-con .menu-txt {font-size: 16px;color:#fff;position: absolute;top:0;left:0;width: 100%;height: 100%;line-height: 150px;font-weight:bold;}
.new-con .about {color:#fff;font-size: 16px;margin-top: 50px;}
.new-con .close {width: 24px;height:24px;position: fixed;top: 15px;right:15px;z-index:50;}

@keyframes ishow{
   0%{transform:translateY(150px);opacity: 0;}
   100%{transform:translateY(0);opacity: 1;}
 }
@keyframes ipic{
    0%{transform:rotate(-15deg);}
    50%{transform:rotate(15deg);}
    100%{transform:rotate(-15deg);}
 }

@keyframes bj2{
  0%{transform:translateX(400px);opacity: 0;}
  100%{transform:translateX(0px);opacity: 1;}
}

@keyframes bj3{
  0%{left:-55px;}
  100%{left:0;}
}

@keyframes bj4{
  0%{transform:scale(0.8,0.8);opacity: 0;}
  100%{transform:scale(1,1);opacity: 1;}
}
