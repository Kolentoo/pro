<view class="banner font">
  <image class="bpic {{mclass==0?'move':''}}" src='../../images/me.jpg'></image>
  <view class="mytitle block b tc">
    <text class="txt block plus">Get inspired</text>
    <text class="txt block">Find your home among the world</text>
    <text class="txt block mbtn" bindtap='discover'>{{arrow1}} Discover {{arrow2}}</text>
  </view>
