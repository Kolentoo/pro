/* pages/about/about.wxss */
.banner {width: 100%;height: 100%;position: fixed;top: 0;left: 0;}
.banner .bpic {width: 100%;height: 100%;position: fixed;top: 0;left: 0;z-index:5;transition:all ease 0.5s;margin-top: 0;}
.banner .move {margin-top: -80%;}
.banner .mytitle {position: fixed;top: 30%;color:#fff;font-size: 16px;z-index:10;width:100%;}
.banner .plus {font-size: 24px;margin-bottom: 8px;}
.banner .mbtn {margin-top: 200px;}
.banner .close {position: fixed;width: 20px;height: 20px;top: 20px;right: 20px;z-index:30;transition:all ease 0.8;opacity: 0;}
.banner .turnon {opacity: 1;}
.content {margin:30px 20px;transition:all ease 0.7s;}
.content-on {margin:350px 20px 0 20px;}
.title {font-size: 18px;}
.intro {font-size: 14px;line-height: 20px;}
